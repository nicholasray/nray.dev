{
  "proseWrap": "always",
  "plugins": [
    "prettier-plugin-tailwindcss",
    "prettier-plugin-astro",
    "prettier-plugin-multiline-arrays"
  ],
  "overrides": [
    {
      "files": "*.mdx",
      "options": {
        "printWidth": 70
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
