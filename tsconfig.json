{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "functions/**/*",
    "dist/**/*",
    "playwright-report/**/*",
    "test-results/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@content/*": ["src/content/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "types": ["@vitest/browser/providers/playwright", "vitest/globals"]
  }
}
