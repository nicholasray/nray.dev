    "@react-email/components": "1.0.1",
    "@react-email/render": "2.0.0",
    "@tailwindcss/vite": "4.1.17",
    "astro": "5.15.8",
    "astro-expressive-code": "0.41.3",
    "astro-seo": "0.8.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "dotenv": "17.2.3",
