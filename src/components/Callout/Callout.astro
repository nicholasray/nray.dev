---
import type { HTMLAttributes } from "astro/types";
import { Icon } from "astro-icon";

interface Props extends HTMLAttributes<"aside"> {}

const { class: className, ...rest } = Astro.props;
---

<aside
  class:list={[
    "callout rounded-lg p-8 bg-sky-50 text-sky-900 dark:bg-sky-500/5 dark:text-sky-200 dark:ring-1 dark:ring-sky-500/30",
    className,
  ]}
  {...rest}
>
  <Icon class="h-5" name="heroicons:light-bulb" />
  <div class="mt-6">
    <slot />
  </div>
</aside>

<style>
  .callout :global(p) {
    margin: 0;
    padding: 0;
  }
</style>
