---
import { Icon } from "astro-icon";
import ThemeToggle from "./ThemeToggle.astro";
import RSSButton from "./RSSButton.astro";
---

<header>
  <div
    class="mx-auto flex h-24 max-w-7xl items-center justify-between px-4 sm:px-6 md:px-8"
  >
    <a class="text-2xl font-semibold tracking-tight text-white" href="/">
      <span class="sr-only">nray.dev home page</span>
      <Icon class="h-8 text-white" name="logo" />
    </a>
    <nav>
      <ul
        class="flex items-center space-x-2 font-semibold text-zinc-700 dark:text-zinc-300 sm:space-x-4 md:space-x-8"
      >
        <li>
          <a
            class="block rounded-2xl p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800 dark:hover:text-white"
            href="/blog/">Posts</a
          >
        </li>
        <li>
          <a
            class="block rounded-2xl p-3 hover:bg-zinc-100 dark:hover:bg-zinc-800 dark:hover:text-white"
            href="/about/">About</a
          >
        </li>
        <li>
          <RSSButton />
        </li>
        <li>
          <ThemeToggle />
        </li>
      </ul>
    </nav>
  </div>
</header>
