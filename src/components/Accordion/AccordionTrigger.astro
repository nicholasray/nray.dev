---
interface Props {
  key: string | number;
  class?: string;
}

const { key, class: className } = Astro.props;
---

<button
  type="button"
  aria-expanded="false"
  class:list={["accordion-trigger", className]}
  aria-controls=`accordion-content-${key}`
  id={`accordion-trigger-${key}`}
>
  <slot />
</button>
