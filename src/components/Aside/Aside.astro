---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"aside"> {
  heading: string;
}

const { class: className, heading, ...rest } = Astro.props;
---

<aside class:list={[`aside my-5 md:my-6`, className]} {...rest}>
  <div
    class="relative rounded-lg bg-sky-100 p-6 text-sky-900 dark:bg-[#1A1F27] dark:text-sky-200 dark:ring-1 dark:ring-sky-500/30"
  >
    <div
      class="absolute right-0 top-0 hidden h-10 w-10 -translate-y-1/3 translate-x-1/4 rounded-full bg-card p-1 md:h-12 md:w-12 xl:block xl:h-14 xl:w-14"
    >
      <svg
        class="h-full w-full rounded-full bg-sky-100 p-2 md:p-2.5 dark:bg-[#1A1F27] dark:ring-1 dark:ring-sky-500/30"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 18v-5.25m0 0a6.01 6.01 0 001.5-.189m-1.5.189a6.01 6.01 0 01-1.5-.189m3.75 7.478a12.06 12.06 0 01-4.5 0m3.75 2.383a14.406 14.406 0 01-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 10-7.517 0c.85.493 1.509 1.333 1.509 2.316V18"
        ></path>
      </svg>
    </div>
    <div class="flex items-center font-bold leading-snug">
      {heading}
    </div>
    <div class="mt-6">
      <slot />
    </div>
  </div>
</aside>
