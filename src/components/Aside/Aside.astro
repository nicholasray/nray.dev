---
import type { HTMLAttributes } from "astro/types";
import { Icon } from "astro-icon";

interface Props extends HTMLAttributes<"aside"> {
  heading: string;
}

const { class: className, heading, ...rest } = Astro.props;
---

<aside class:list={["aside md:pt-4 pt-3", className]} {...rest}>
  <div
    class="relative rounded-lg p-6 bg-sky-100 text-sky-900 dark:bg-[#1A1F27] dark:text-sky-200 dark:ring-1 dark:ring-sky-500/30"
  >
    <div
      class="absolute right-0 top-0 p-1 bg-white dark:bg-zinc-900 md:w-12 md:h-12 xl:w-14 xl:h-14 w-10 h-10 -translate-y-1/3 translate-x-1/4 rounded-full hidden xl:block"
    >
      <Icon
        class="dark:bg-[#1A1F27] bg-sky-100 p-2 md:p-2.5 dark:ring-sky-500/30 dark:ring-1 rounded-full w-full h-full"
        name="heroicons:light-bulb"
      />
    </div>
    <div class="font-bold flex items-center text-md leading-snug">
      {heading}
    </div>
    <div class="mt-6">
      <slot />
    </div>
  </div>
</aside>

<style>
  .aside :global(p) {
    margin: 0;
    padding: 0;
  }
</style>
