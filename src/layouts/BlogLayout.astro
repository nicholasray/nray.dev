---
import Layout from "./Layout.astro";
import { Image } from "@astrojs/image/components";
import avatar from "@assets/images/avatar.jpg";
import { format } from "date-fns";
import Prose from "@components/Prose.astro";
import type { Post, PostFrontmatter } from "src/types";

const { title, readingTime, publishedAt, description } = Astro.props
  .frontmatter as PostFrontmatter;
---

<Layout title={title} description={description}>
  <main class="grid grid-cols-1 gap-y-20 sm:gap-y-32 md:gap-y-40">
    <section class="mt-16">
      <article class="mx-auto max-w-3xl px-4 sm:px-6 md:px-8">
        <h1 class="mb-3 text-3xl font-bold text-white md:mb-6 md:text-5xl">
          {title}
        </h1>
        <div
          class="mb-8 flex items-center justify-between text-sm font-medium md:text-base"
        >
          <div class="flex items-center">
            <div class="mr-3 h-9 w-9 rounded-full">
              <Image
                loading="eager"
                class="rounded-full"
                src={avatar}
                width={72}
                alt="Avatar"
              />
            </div>
            <div>Nicholas Ray</div>
          </div>
          <div>
            <time datetime={publishedAt}>
              {publishedAt ? format(new Date(publishedAt), "LLLL d, yyyy") : ""}
            </time>
            <span> â€” {readingTime}</span>
          </div>
        </div>
        <Prose>
          <slot />
        </Prose>
      </article>
    </section>
  </main>
</Layout>
