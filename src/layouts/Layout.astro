---
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import MailingList from "@components/MailingList.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
const FORM_URL = "https://app.convertkit.com/forms/3512386/subscriptions";
---

<BaseLayout {...Astro.props}>
  <Fragment slot="before-styles">
    <slot name="before-styles" />
  </Fragment>
  <Header />
  <slot />
  <section class="my-20 sm:my-32 md:my-40">
    <div class="mx-auto mb-16 max-w-7xl items-center px-4 sm:px-6 md:px-8">
      <MailingList url={FORM_URL} />
    </div>
  </section>
  <Footer />
</BaseLayout>
